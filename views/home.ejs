<!-- Produtos em Destaque -->
<section class="featured-products mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Produtos em Destaque</h2>
        <div class="row g-4">
            <% if (typeof produtos !== 'undefined' && produtos.length > 0) { %>
                <% produtos.forEach(produto => { %>
                    <div class="col-md-3">
                        <div class="card product-card h-100">
                            <% if (produto.images && produto.images.length > 0) { %>
                                <img src="<%= produto.images[0].url %>" class="card-img-top" alt="<%= produto.name %>">
                            <% } else { %>
                                <img src="/images/placeholder.jpg" class="card-img-top" alt="<%= produto.name %>">
                            <% } %>
                            <div class="card-body">
                                <% if (produto.category) { %><span class="category-badge mb-2"><%= produto.category.name %></span><% } %>
                                <h5 class="card-title"><%= produto.name %></h5>
                                <p class="card-text text-truncate"><%= produto.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="price">R$ <%= produto.price.toFixed(2) %></span>
                                    <a href="/produtos/<%= produto.slug %>" class="btn btn-primary">Ver Detalhes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p>Nenhum produto em destaque no momento.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

